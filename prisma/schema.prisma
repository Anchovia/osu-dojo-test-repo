generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id
  username       String    @unique
  registered_at  DateTime  @default(now())
  last_played_at DateTime
  passed_dan     String
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  dan_logs       Dan_log[]
}

model Dan_log {
  id         Int      @id
  user       User     @relation(fields: [user_id], references: [id])
  user_id    Int
  dan        Dan      @relation(fields: [dan_id], references: [id])
  dan_id     Int
  api_key    String   @unique
  score      String //json
  used_pause Boolean
  used_v2    Boolean
  is_passed  Boolean
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Dan {
  id               Int       @id @default(autoincrement())
  code             String    @unique
  name             String    @unique
  level            String    @unique
  cutline          Int
  allowed_modes    String // JSON string format
  can_use_pause    Boolean
  can_use_v2       Boolean
  clear_user_count Int
  try_user_count   Int
  mapset_id        Int       @unique
  map              Map       @relation(fields: [map_id], references: [id])
  map_id           Int
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt
  dan_logs         Dan_log[]
}

model Map {
  id          Int      @id
  mapper_name String
  length      String
  difficulty  Float
  average_pp  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  dans        Dan[]
}
